import pygame

pygame.init()

fenetre = pygame.display.set_mode((1000, 600))
fond = pygame.image.load("grille.png")
fenetre.blit(fond, (0,0))

pygame.display.flip()

continuer = True
while continuer:

	for event in pygame.event.get():

		if event.type == pygame.QUIT:

			continuer = False

pygame.quit()
